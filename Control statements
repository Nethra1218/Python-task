  print(i)

#while loop using else statemnet
i = 1
while i < 6:
  print(i)
  i += 1
else:
  print("i is no longer less than 6")


#using for loop
fruits = ["apple", "banana", "cherry"]
for x in fruits:
  print(x)


# for loop with break statement
fruits = ["apple", "banana", "cherry"]
for x in fruits:
  print(x)
  if x == "banana":
    break
  
# for loop using continue statement
fruits = ["apple", "banana", "cherry"]
for x in fruits:
  if x == "banana":
    continue
  print(x)
'''
#using range function in for loop
for x in range(6):
  print(x)

for x in range(2, 6):
  print(x)

for x in range(2, 30, 3):
  print(x)


for x in range(6):
  print(x)
else:
  print("Finally finished!")


for x in range(6):
  if x == 3: break
  print(x)
else:
  print("Finally finished!")

#for in range using pass statement
for x in [0, 1, 2]:
  pass
